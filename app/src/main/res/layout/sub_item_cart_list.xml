    <LinearLayout
        android:id="@+id/ll_wtf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="酒红色/S"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray30" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90.5€"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_wtf"
        android:layout_marginTop="15dp"
        android:text="合计：0232032￥"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_reduce" />

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/iv_reduce"
            android:background="@drawable/shape_gray20_full_3"
            android:ellipsize="middle"
            android:ems="4"
            android:maxEms="6"
            android:gravity="center"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/tv_input"
            android:src="@drawable/ic_plus" />

    </RelativeLayout>

</RelativeLayout>